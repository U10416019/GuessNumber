<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wenchi.guessnumber.MainActivity">

    <TextView
        android:text="搶數字"
        android:textSize="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/textView" />

    <Button
        android:text="多人模式"
        android:textSize="30dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/buttonMultiplePlayer"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/buttonTwoPlayer"
        android:layout_alignStart="@+id/buttonTwoPlayer" />

    <Button
        android:text="遊戲玩法"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="單人模式"
        android:textSize="30dp"
        android:id="@+id/buttonSinglePlayer"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_above="@+id/buttonTwoPlayer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

    <Button
        android:text="雙人模式"
        android:textSize="30dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/buttonTwoPlayer"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/buttonMultiplePlayer"
        android:layout_alignLeft="@+id/buttonSinglePlayer"
        android:layout_alignStart="@+id/buttonSinglePlayer" />

    <Spinner
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginBottom="22dp"
        android:layout_width="250dp"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/buttonMultiplePlayer"
        android:layout_alignStart="@+id/buttonMultiplePlayer" />

</RelativeLayout>
