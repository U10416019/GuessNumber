<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/linearLayout"
        android:weightSum="5"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/flag5"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"

            app:srcCompat="@drawable/flag" />

        <ImageView
            android:id="@+id/flag4"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="123dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="123dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/flag" />

        <ImageView
            android:id="@+id/flag3"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="210dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="210dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/flag" />

        <ImageView
            android:id="@+id/flag2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/player2Icon"
            android:layout_alignStart="@+id/player2Icon"
            android:layout_alignTop="@+id/flag1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"

            app:srcCompat="@drawable/flag" />

        <ImageView
            android:id="@+id/flag1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/flag" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:weightSum="5"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/player5Icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cat" />

        <ImageView
            android:id="@+id/player4Icon"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginBottom="8dp"
            android:layout_marginEnd="123dp"
            android:layout_marginRight="123dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cat" />

        <ImageView
            android:id="@+id/player3Icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="210dp"
            android:layout_marginRight="210dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cat" />

        <ImageView
            android:id="@+id/player2Icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="124dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cat" />

        <ImageView
            android:id="@+id/player1Icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <TextView
        android:text="00"
        android:textSize="100sp"
        android:layout_width="464dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:id="@+id/answerTextView"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/player2Name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="124dp" />

    <TextView
        android:id="@+id/player3Name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="210dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="210dp" />

    <TextView
        android:id="@+id/player4Name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="123dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="123dp" />

    <TextView
        android:id="@+id/player5Name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="35dp" />

    <TextView
        android:id="@+id/player1Name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="35dp" />

    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:id="@+id/minus"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        android:layout_width="88dp"
        android:layout_alignBaseline="@+id/plus"
        android:layout_alignBottom="@+id/plus"
        android:layout_toRightOf="@+id/currentNumberTextView"
        android:layout_toEndOf="@+id/currentNumberTextView"
        android:layout_marginStart="36dp"
        android:layout_marginTop="304dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"
        app:layout_constraintVertical_bias="0.004"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/currentNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:text="00"
        android:textAlignment="center"
        android:textSize="80sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/minus"
        android:layout_alignBottom="@+id/minus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:text="+"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        android:layout_above="@+id/ok"
        android:layout_toLeftOf="@+id/currentNumberTextView"
        android:layout_toStartOf="@+id/currentNumberTextView"
        android:layout_marginTop="304dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp"
        app:layout_constraintVertical_bias="0.04"
        android:layout_marginRight="88dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="88dp" />

    <Button
        android:text="確認"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        android:layout_width="233dp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="393dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintVertical_bias="0.504"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />





</android.support.constraint.ConstraintLayout>
