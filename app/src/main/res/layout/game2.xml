<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="00"
        android:textSize="100sp"
        android:layout_width="464dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:id="@+id/answerTextView"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/flag1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/player2Icon"
        android:layout_alignStart="@+id/player2Icon"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintVertical_bias="0.058"
        app:srcCompat="@drawable/flag" />

    <ImageView
        android:id="@+id/flag2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/player2Icon"
        android:layout_alignStart="@+id/player2Icon"
        android:layout_alignTop="@+id/flag1"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintVertical_bias="0.058"
        app:srcCompat="@drawable/flag"
        android:layout_marginRight="109dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/player1Icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_above="@+id/player1Name"
        android:layout_alignLeft="@+id/flag1"
        android:layout_alignStart="@+id/flag1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintVertical_bias="0.217"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/player2Icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/cat"
        android:layout_toRightOf="@+id/currentNumberTextView"
        android:layout_toEndOf="@+id/currentNumberTextView"
        android:layout_alignTop="@+id/player1Icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintVertical_bias="0.217"
        android:layout_marginRight="109dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/player2Name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player1Icon"
        android:layout_alignStart="@+id/player1Icon"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="109dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/player2Icon"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/player1Name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player2Icon"
        android:layout_alignStart="@+id/player2Icon"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintVertical_bias="0.344" />

    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:id="@+id/minus"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        android:layout_width="70dp"
        android:layout_alignBaseline="@+id/plus"
        android:layout_alignBottom="@+id/plus"
        android:layout_toRightOf="@+id/currentNumberTextView"
        android:layout_toEndOf="@+id/currentNumberTextView"
        android:layout_marginStart="36dp"
        android:layout_marginTop="304dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"
        app:layout_constraintVertical_bias="0.004"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.153" />

    <TextView
        android:id="@+id/currentNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.17"
        android:text="00"
        android:textAlignment="center"
        android:textSize="80sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/minus"
        android:layout_alignBottom="@+id/minus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:text="+"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        android:layout_above="@+id/ok"
        android:layout_toLeftOf="@+id/currentNumberTextView"
        android:layout_toStartOf="@+id/currentNumberTextView"
        android:layout_marginTop="304dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp"
        app:layout_constraintVertical_bias="0.04"
        android:layout_marginRight="88dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:text="確認"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        android:layout_width="233dp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="393dp"
        app:layout_constraintTop_toBottomOf="@+id/answerTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintVertical_bias="0.504" />





</android.support.constraint.ConstraintLayout>
